<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/profileImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/profile_image"
        android:elevation="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile"
        android:tint="@color/colorPrimaryDarkLight" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profileImage"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/profileImage"
        android:text="@string/user_name"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/userSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="22dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_settings"
        android:tint="@color/colorPrimaryLight" />

    <!--<TextView
        android:id="@+id/userLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/levelBar"
        android:layout_alignEnd="@+id/levelBar"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="6dp"
        android:text="@string/user_level" />

    <ImageView
        android:id="@+id/levelBar"
        android:layout_width="180dp"
        android:layout_height="8dp"
        android:layout_alignBottom="@+id/profileImage"
        android:layout_alignStart="@+id/userName"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="22dp"
        android:src="@drawable/profile_level_bar" />-->

    <TextView
        android:id="@+id/subscriptionsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profileImage"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/profileImage"
        android:text="@string/user_subscriptions"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/userSubscriptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/subscriptionsTitle"
        android:layout_marginStart="14dp"
        android:layout_toRightOf="@+id/subscriptionsTitle"
        android:text="nÂº de inscritos" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="170dp"
        app:srcCompat="@drawable/line_separator" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="190dp"
        android:text="@string/description_hint"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/descriptionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="190dp"
        android:background="@android:color/transparent"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <EditText
        android:id="@+id/descriptionEdit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/rounded_edit_text_2"
        android:elevation="4dp"
        android:ems="10"
        android:inputType="textCapSentences|textMultiLine"
        android:paddingBottom="4dp"
        android:paddingEnd="10dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:visibility="gone" />
</RelativeLayout>