<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/profile_image"
        android:contentDescription="@string/profile_image_description"
        android:elevation="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/profile_image"
        android:contentDescription="@string/profile_image_description"
        android:elevation="4dp" />

    <TextView
        android:id="@+id/profile_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_iv"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/profile_iv"
        android:text="@string/profile_name"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/profile_ib_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/profile_settings_description"
        android:src="@drawable/ic_settings"
        android:tint="@color/colorPrimaryLight" />

    <!--<TextView
        android:id="@+id/userLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/levelBar"
        android:layout_alignEnd="@+id/levelBar"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="6dp"
        android:text="@string/user_level" />

    <ImageView
        android:id="@+id/levelBar"
        android:layout_width="180dp"
        android:layout_height="8dp"
        android:layout_alignBottom="@+id/profileImage"
        android:layout_alignStart="@+id/userName"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="22dp"
        android:src="@drawable/profile_level_bar" />-->

    <TextView
        android:id="@+id/profile_tv_subs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/profile_tv_sub_count"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/profile_tv_sub_count"
        android:text="@string/profile_subs" />

    <TextView
        android:id="@+id/profile_tv_sub_count"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/profile_iv"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/profile_iv"
        android:textAlignment="center" />

    <View
        android:id="@+id/profile_vw_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/profile_iv"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/profile_tv_description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_vw_separator"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/profile_about_title"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/profile_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_tv_description_title"
        android:layout_alignStart="@id/profile_tv_description_title"
        android:layout_marginTop="10dp"
        android:text="@string/profile_description_hint" />

</RelativeLayout>