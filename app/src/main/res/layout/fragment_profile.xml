<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/profile_ib"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/profile_image"
        android:contentDescription="@string/profile_image_description"
        android:elevation="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile"
        android:tint="@color/colorPrimaryDarkLight" />

    <TextView
        android:id="@+id/profile_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_ib"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/profile_ib"
        android:text="@string/profile_name"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/profile_ib_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/profile_settings_description"
        android:src="@drawable/ic_settings"
        android:tint="@color/colorPrimaryLight" />

    <!--<TextView
        android:id="@+id/userLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/levelBar"
        android:layout_alignEnd="@+id/levelBar"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="6dp"
        android:text="@string/user_level" />

    <ImageView
        android:id="@+id/levelBar"
        android:layout_width="180dp"
        android:layout_height="8dp"
        android:layout_alignBottom="@+id/profileImage"
        android:layout_alignStart="@+id/userName"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="22dp"
        android:src="@drawable/profile_level_bar" />-->

    <TextView
        android:id="@+id/profile_tv_subs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profile_ib"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@+id/profile_ib"
        android:text="@string/profile_subs"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/profile_tv_sub_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profile_tv_subs"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/profile_tv_subs"
        android:text="@string/profile_sub_count" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/profile_tv_subs"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/profile_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="190dp"
        android:text="@string/profile_description_title"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/profile_et_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_tv_description"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        android:elevation="4dp"
        android:ems="10"
        android:hint="@string/profile_description_hint"
        android:importantForAutofill="no"
        android:inputType="textCapSentences|textMultiLine"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="10dp"
        android:paddingBottom="4dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:visibility="visible" />
</RelativeLayout>