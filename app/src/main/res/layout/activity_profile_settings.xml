<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/profile_settings_ab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/profile_settings_tb"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
            app:layout_scrollFlags="enterAlways"
            app:title="@string/profile_settings_title"
            app:titleTextAppearance="@android:style/TextAppearance.Medium"
            tools:ignore="UnusedAttribute" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/profile_settings_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_below="@id/profile_settings_ab"
        android:layout_marginTop="40dp"
        android:text="@string/profile_description_title"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/profile_settings_et_description"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:layout_below="@id/profile_settings_tv_description"
        android:hint="@string/profile_description_hint"
        android:importantForAutofill="no"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/profile_settings_bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_settings_bt_save"
        android:layout_below="@id/profile_settings_et_description"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp" />

    <Button
        android:id="@+id/profile_settings_bt_signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_below="@id/profile_settings_bt_save"
        android:layout_marginTop="60dp"
        android:text="@string/profile_settings_bt_signout"
        style="@style/Widget.MaterialComponents.Button.TextButton" />
</RelativeLayout>