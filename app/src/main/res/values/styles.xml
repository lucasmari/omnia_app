<resources>

    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="colorPrimarySurface">@color/colorPrimary</item>

        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorOnPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>

        <item name="tabStyle">@style/Widget.MaterialComponents.TabLayout.Colored</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
    </style>

</resources>
